<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s11"
    tools:context=".MainActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="65dp"
        android:src="@drawable/musicart"
        app:civ_border_color="@color/colorPrimaryDark"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="206dp"
        android:layout_toStartOf="@+id/null"
        android:hint="GoTo Songs"
        android:textColor="WHITE" />
    <Button
        android:id="@+id/bttn_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/play" />

    <Button
        android:id="@+id/bttn_pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/bttn_play"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pauseart" />

    <Button
        android:id="@+id/bttn_stop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/bttn_play"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="78dp"
        android:background="@drawable/stop" />





</RelativeLayout>